<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BackgroundBorder" TargetType="Border">
        <Setter Property="Background" Value="#0d1117"/>
        <Setter Property="CornerRadius" Value="15"/>
    </Style>
    <Style x:Key="BorderControl" TargetType="Border">
        <Setter Property="Background" Value="#161b22"/>
        <Setter Property="CornerRadius" Value="15 15 0 0"/>
    </Style>
    <Style x:Key="BorderMenu" TargetType="Border">
        <Setter Property="Background" Value="#161b22"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Height" Value="90"/>
        <Setter Property="Width" Value="1100"/>
        <Setter Property="Margin" Value="0 0 0 50"/>
        <Setter Property="CornerRadius" Value="15"/>
    </Style>
    <Style x:Key="BorderMenuButton" TargetType="Border">
        <Setter Property="Background" Value="#f78166"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Height" Value="4"/>
        <Setter Property="Visibility" Value="Hidden"/>
        <Setter Property="Width" Value="250"/>
        <Setter Property="CornerRadius" Value="3"/>
    </Style>
</ResourceDictionary>