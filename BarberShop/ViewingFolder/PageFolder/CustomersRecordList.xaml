<Page x:Class="BarberShop.ViewingFolder.PageFolder.CustomersRecordList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BarberShop.ViewingFolder.PageFolder"
      mc:Ignorable="d" 
      Style="{StaticResource MainPage}">
    <Grid>
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border  HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Height="Auto" Margin="0 0 0 10" CornerRadius="20" BorderBrush="#33FFFFFF" BorderThickness="2">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock 
                        HorizontalAlignment="Center"
                        FontSize="37"
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ИНФОРМАЦИЯ О КЛИЕНТЕ"/>
                    <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                        <TextBlock 
                            Style="{StaticResource InfoDataBaseTextBlockFalse}"
                            Text="ФАМИЛИЯ:"/>
                        <TextBox
                            Margin="5 0 0 0"
                            Width="387"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                        <TextBlock 
                            Style="{StaticResource InfoDataBaseTextBlockFalse}"
                            Text="ИМЯ:"/>
                        <TextBox
                            Margin="5 0 0 0"
                            Width="439"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                        <TextBlock 
                            Style="{StaticResource InfoDataBaseTextBlockFalse}"
                            Text="ОТЧЕСТВО:"/>
                        <TextBox
                            Margin="5 0 0 0"
                            Width="391"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 3 0 10">
                        <TextBlock 
                            Style="{StaticResource InfoDataBaseTextBlockFalse}"
                            Text="ПОЛ:"/>
                        <TextBox
                            Margin="5 0 0 0"
                            Width="442"/>
                    </StackPanel>
                 </StackPanel>
            </Border>
            <Border  HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Height="Auto" Margin="0 10 0 0" CornerRadius="20" BorderBrush="#33FFFFFF" BorderThickness="2">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock 
                        HorizontalAlignment="Center"
                        FontSize="37"
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ИНФОРМАЦИЯ О СТРИЖКЕ"/>
                    <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                        <TextBlock 
                            Style="{StaticResource InfoDataBaseTextBlockFalse}"
                            Text="СТРИЖКА:"/>
                        <TextBox
                            Margin="5 0 0 0"
                            Width="391"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                        <TextBlock 
                            Style="{StaticResource InfoDataBaseTextBlockFalse}"
                            Text="ДАТА ЗАПИСИ:"/>
                        <TextBox
                            Margin="5 0 0 0"
                            Width="352"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 3 0 10">
                        <TextBlock 
                            Style="{StaticResource InfoDataBaseTextBlockFalse}"
                            Text="ВРЕМЯ ЗАПИСИ:"/>
                        <TextBox
                            Margin="5 0 0 0"
                            Width="340"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
