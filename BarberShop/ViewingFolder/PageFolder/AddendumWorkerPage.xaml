<Page x:Class="BarberShop.ViewingFolder.PageFolder.AddendumWorkerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BarberShop.ViewingFolder.PageFolder"
      mc:Ignorable="d" 
      d:DesignHeight="1430" d:DesignWidth="727">

    <Grid>
        <ScrollViewer>
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10 0 0 0">
                <Grid Height="360">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.43*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockFalse}"
                                Text="ФАМИЛИЯ:"/>
                            <TextBox
                                Margin="5 0 0 0"
                                Width="290"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockFalse}"
                                Text="ИМЯ:"/>
                            <TextBox
                                Margin="5 0 0 0"
                                Width="344"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockFalse}"
                                Text="ОТЧЕСТВО:"/>
                            <TextBox
                                Margin="5 0 0 0"
                                Width="295"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockFalse}"
                                Text="ПОЛ:"/>
                            <TextBox
                                Margin="5 0 0 0"
                                Width="346"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockFalse}"
                                Text="ДАТА РОЖДЕНИЯ:"/>
                            <TextBox
                                Margin="5 0 0 0"
                                Width="220"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockFalse}"
                                Text="ДОЛЖНОСТЬ:"/>
                            <TextBox
                                Margin="5 0 0 0"
                                Width="263"/>
                        </StackPanel>
                    </StackPanel>
                    <Border Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Margin="0 10 0 0" CornerRadius="20" BorderBrush="#33FFFFFF" BorderThickness="2">
                        <Image
                            Height="280"
                            Width="230"
                            Stretch="UniformToFill"
                            Margin="10 10 10 10"
                            x:Name="PhotoProfileImage"
                            Source="{Binding PassportWorkerTable.ImageWorkerTable.ImageBit}"/>
                    </Border>
                    <Button 
                        x:Name="UploadingPhotosButton"
                        Click="UploadingPhotosButton_Click"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center" 
                        Margin="0 0 0 0"
                        Grid.Column="1"
                        Height="40"
                        Width="240"
                        FontSize="30"
                        Content="ЗАГРУЗИТЬ ФОТО"/>
                </Grid>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Line 
                        X1="0"  X2="305"
                        Y1="0" Y2="0" 
                        Stroke="White"
                        Opacity="0.2"
                        VerticalAlignment="Center"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ДОСТУП"
                        Foreground="White"
                        Opacity="0.2"/>
                    <Line 
                        X1="0"  X2="305"
                        Y1="0" Y2="0" 
                        Stroke="White"
                        Opacity="0.2"
                        VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ЛОГИН:"/>
                    <TextBox
                        Margin="5 0 0 0"
                        Width="555"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ПАРОЛЬ:"/>
                    <TextBox
                        Margin="5 0 0 0"
                        Width="542"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Line 
                        X1="0"  X2="315"
                        Y1="0" Y2="0" 
                        Stroke="White"
                        Opacity="0.2"
                        VerticalAlignment="Center"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="СВЯЗЬ"
                        Foreground="White"
                        Opacity="0.2"/>
                    <Line 
                        X1="0"  X2="315"
                        Y1="0" Y2="0" 
                        Stroke="White"
                        Opacity="0.2"
                        VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="НОМЕР ТЕЛЕФОНА:"/>
                    <TextBox
                        Margin="5 0 0 0"
                        Width="450"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ЭЛЕКТРОННАЯ ПОЧТА:"/>
                    <TextBox
                        Margin="5 0 0 0"
                        Width="420"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Line 
                        X1="0"  X2="305"
                        Y1="0" Y2="0" 
                        Stroke="White"
                        Opacity="0.2"
                        VerticalAlignment="Center"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ПАСПОРТ"
                        Foreground="White"
                        Opacity="0.2"/>
                    <Line 
                        X1="0"  X2="305"
                        Y1="0" Y2="0" 
                        Stroke="White"
                        Opacity="0.2"
                        VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="СЕРИЯ ПАСПОРТА:"/>
                    <TextBox
                        Margin="5 0 0 0"
                        Width="450"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="НОМЕР ПАСПОРТА:"/>
                    <TextBox
                        Margin="5 0 0 0"
                        Width="446"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ПАСПОРТ ВЫДАН:"/>
                    <TextBox
                        Margin="5 0 0 0"
                        Width="450"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ДАТА ВЫДАЧИ ПАСПОРТА:"/>
                    <TextBox
                        Margin="5 0 0 0"
                        Width="372"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="КОД ПОДРАЗДЕЛЕНИЯ:"/>
                    <TextBox
                        Margin="5 0 0 0"
                        Width="397"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="МЕСТО РОЖДЕНИЯ:"/>
                    <TextBox
                        Margin="5 0 0 0"
                        Width="438"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Line 
                        X1="0"  X2="260"
                        Y1="0" Y2="0" 
                        Stroke="White"
                        Opacity="0.2"
                        VerticalAlignment="Center"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="МЕСТО ЖИТЕЛЬСТВА"
                        Foreground="White"
                        Opacity="0.2"/>
                    <Line 
                        X1="0"  X2="260"
                        Y1="0" Y2="0" 
                        Stroke="White"
                        Opacity="0.2"
                        VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="РЕГИОН:"/>
                    <TextBox
                        Margin="5 0 0 0"
                        Width="450"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="РАЙОН:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding PassportWorkerTable.DistrictWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ПУНКТ:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding PassportWorkerTable.RegistrationPointWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="УЛИЦА:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding PassportWorkerTable.RegistrationStreetWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ДОМ:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding PassportWorkerTable.RegistrationHouseWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="КВАРТИРА:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding PassportWorkerTable.RegistrationApartmentWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Line 
                        X1="0"  X2="315"
                        Y1="0" Y2="0" 
                        Stroke="White"
                        Opacity="0.2"
                        VerticalAlignment="Center"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="КАРТА"
                        Foreground="White"
                        Opacity="0.2"/>
                    <Line 
                        X1="0"  X2="315"
                        Y1="0" Y2="0" 
                        Stroke="White"
                        Opacity="0.2"
                        VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="НОМЕР КАРТЫ:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding CardNumberWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="СРОК КАРТЫ МЕСЯЦ:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding SalaryCardTable.CardValidMonth}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="СРОК КАРТЫ ГОД:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding SalaryCardTable.CardValidYears}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ИМЯ ДЕРЖАТЕЛЯ КАРТЫ:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding SalaryCardTable.CardKeeperName}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ФАМИЛИЯ ДЕРЖАТЕЛЯ КАРТЫ:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding SalaryCardTable.CardKeeperSurname}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="КОД КАРТЫ:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding SalaryCardTable.CardCode}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
