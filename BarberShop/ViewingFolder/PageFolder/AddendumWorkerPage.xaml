<Page x:Class="BarberShop.ViewingFolder.PageFolder.AddendumWorkerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BarberShop.ViewingFolder.PageFolder"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="546">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock 
                HorizontalAlignment="Center"
                FontSize="37"
                Style="{StaticResource InfoDataBaseTextBlockFalse}"
                Text="ИНФОРМАЦИЯ О НОВОМ СОТРУДНИКЕ"/>
            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                <TextBlock 
                    Style="{StaticResource InfoDataBaseTextBlockFalse}"
                    Text="ФАМИЛИЯ:"/>
                <TextBox
                    Margin="5 0 0 0"
                    Width="387"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                <TextBlock 
                    Style="{StaticResource InfoDataBaseTextBlockFalse}"
                    Text="ИМЯ:"/>
                <TextBox
                    Margin="5 0 0 0"
                    Width="439"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                <TextBlock 
                    Style="{StaticResource InfoDataBaseTextBlockFalse}"
                    Text="ОТЧЕСТВО:"/>
                <TextBox
                    Margin="5 0 0 0"
                    Width="391"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                <TextBlock 
                    Style="{StaticResource InfoDataBaseTextBlockFalse}"
                    Text="ПОЛ:"/>
                <TextBox
                    Margin="5 0 0 0"
                    Width="442"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                <TextBlock 
                    Style="{StaticResource InfoDataBaseTextBlockFalse}"
                    Text="ДАТА РОЖДЕНИЯ:"/>
                <TextBox
                    Margin="5 0 0 0"
                    Width="317"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                <TextBlock 
                    Style="{StaticResource InfoDataBaseTextBlockFalse}"
                    Text="ДОЛЖНОСТЬ:"/>
                <TextBox
                    Margin="5 0 0 0"
                    Width="361"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                <TextBlock 
                    Style="{StaticResource InfoDataBaseTextBlockFalse}"
                    Text="НОМЕР ТЕЛЕФОНА:"/>
                <TextBox
                    Margin="5 0 0 0"
                    Width="318"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                <TextBlock 
                    Style="{StaticResource InfoDataBaseTextBlockFalse}"
                    Text="EMAIL:"/>
                <TextBox
                    Margin="5 0 0 0"
                    Width="428"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                <TextBlock 
                    Style="{StaticResource InfoDataBaseTextBlockFalse}"
                    Text="LOGIN:"/>
                <TextBox
                    Margin="5 0 0 0"
                    Width="429"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                <TextBlock 
                    Style="{StaticResource InfoDataBaseTextBlockFalse}"
                    Text="PASSWORD:"/>
                <TextBox
                    x:Name="PasswordTextBox"
                    Margin="5 0 0 0"
                    Width="380"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                <PasswordBox
                    x:Name="PasswordPasswordBox"
                    Margin="112 0 0 0"
                    Width="380"
                    Height="32"
                    PasswordChanged="PasswordPasswordBox_PasswordChanged"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="120 3 0 0">
                <TextBlock 
                    Style="{StaticResource InfoDataBaseTextBlockTrue}"
                    Visibility="Collapsed"
                    x:Name="ErrorPasswordTextBlock"
                    FontSize="18"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 20 0 0">
                <Button 
                    x:Name="NewWorkerButton"
                    Click="NewWorkerButton_Click"
                    Content="СОХРАНИТЬ" 
                    Height="40" 
                    Width="250"
                    FontSize="30"
                    Margin="0 0 10 0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
