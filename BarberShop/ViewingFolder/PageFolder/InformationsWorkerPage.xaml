<Page x:Class="BarberShop.ViewingFolder.PageFolder.InformationsWorkerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BarberShop.ViewingFolder.PageFolder"
      mc:Ignorable="d" 
      d:DesignHeight="1430" d:DesignWidth="727">

    <Grid>
        <ScrollViewer>
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10 0 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.43*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockFalse}"
                                Text="ПЕРСОНАЛЬНЫЙ НОМЕР:"/>
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockTrue}"
                                Text="{Binding PersonalNumberWorker}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockFalse}"
                                Text="СТАТУС:"/>
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockTrue}"
                                Text="{Binding StatusTable.NameStatus}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockFalse}"
                                Text="ФАМИЛИЯ:"/>
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockTrue}"
                                Text="{Binding PassportWorkerTable.SurnameWorker}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockFalse}"
                                Text="ИМЯ:"/>
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockTrue}"
                                Text="{Binding PassportWorkerTable.NameWorker}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockFalse}"
                                Text="ОТЧЕСТВО:"/>
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockTrue}"
                                Text="{Binding PassportWorkerTable.MiddleNameWorker}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockFalse}"
                                Text="ПОЛ:"/>
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockTrue}"
                                Text="{Binding PassportWorkerTable.PaulTable.NamePaul}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockFalse}"
                                Text="ДАТА РОЖДЕНИЯ:"/>
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockTrue}"
                                Text="{Binding PassportWorkerTable.DateOfBirthWorker, StringFormat='{}{0:dd/MM/yyyy}'}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockFalse}"
                                Text="ДОЛЖНОСТЬ:"/>
                            <TextBlock 
                                Style="{StaticResource InfoDataBaseTextBlockTrue}"
                                Text="{Binding PostTable.NamePost}"/>
                        </StackPanel>
                    </StackPanel>
                    <Border Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Margin="0 10 0 0" CornerRadius="20" BorderBrush="#33FFFFFF" BorderThickness="2">
                        <Image
                           Height="280"
                           Width="230"
                           Stretch="UniformToFill"
                           Margin="10 10 10 10"
                           Source="{Binding PassportWorkerTable.ImageWorkerTable.ImageBit}"/>
                    </Border>
                </Grid>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Line 
                        X1="0"  X2="305"
                        Y1="0" Y2="0" 
                        Stroke="White"
                        Opacity="0.2"
                        VerticalAlignment="Center"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ДОСТУП"
                        Foreground="White"
                        Opacity="0.2"/>
                    <Line 
                        X1="0"  X2="305"
                        Y1="0" Y2="0" 
                        Stroke="White"
                        Opacity="0.2"
                        VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ЛОГИН:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding LoginWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ПАРОЛЬ:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding PasswordWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Line 
                        X1="0"  X2="315"
                        Y1="0" Y2="0" 
                        Stroke="White"
                        Opacity="0.2"
                        VerticalAlignment="Center"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="СВЯЗЬ"
                        Foreground="White"
                        Opacity="0.2"/>
                    <Line 
                        X1="0"  X2="315"
                        Y1="0" Y2="0" 
                        Stroke="White"
                        Opacity="0.2"
                        VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                    Style="{StaticResource InfoDataBaseTextBlockFalse}"
                    Text="НОМЕР ТЕЛЕФОНА:"/>
                    <TextBlock 
                    Style="{StaticResource InfoDataBaseTextBlockTrue}"
                    Text="{Binding NumberPhoneWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                    Style="{StaticResource InfoDataBaseTextBlockFalse}"
                    Text="ЭЛЕКТРОННАЯ ПОЧТА:"/>
                    <TextBlock 
                    Style="{StaticResource InfoDataBaseTextBlockTrue}"
                    Text="{Binding EmailWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Line 
                        X1="0"  X2="305"
                        Y1="0" Y2="0" 
                        Stroke="White"
                        Opacity="0.2"
                        VerticalAlignment="Center"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ПАСПОРТ"
                        Foreground="White"
                        Opacity="0.2"/>
                    <Line 
                        X1="0"  X2="305"
                        Y1="0" Y2="0" 
                        Stroke="White"
                        Opacity="0.2"
                        VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="СЕРИЯ ПАСПОРТА:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding PSWorker}"
                        Name="InfoPaulTextBlock"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="НОМЕР ПАСПОРТА:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding PNWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ПАСПОРТ ВЫДАН:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding PassportWorkerTable.PassportIssuedWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ДАТА ВЫДАЧИ ПАСПОРТА:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding PassportWorkerTable.DateOfIssueWorker, StringFormat='{}{0:dd/MM/yyyy}'}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="КОД ПОДРАЗДЕЛЕНИЯ:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding PassportWorkerTable.DivisionCodeWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="МЕСТО РОЖДЕНИЯ:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding PassportWorkerTable.PlaceOfBirthWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Line 
                        X1="0"  X2="260"
                        Y1="0" Y2="0" 
                        Stroke="White"
                        Opacity="0.2"
                        VerticalAlignment="Center"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="МЕСТО ЖИТЕЛЬСТВА"
                        Foreground="White"
                        Opacity="0.2"/>
                    <Line 
                        X1="0"  X2="260"
                        Y1="0" Y2="0" 
                        Stroke="White"
                        Opacity="0.2"
                        VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="РЕГИОН:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding PassportWorkerTable.RegistrationRegionWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="РАЙОН:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding PassportWorkerTable.DistrictWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ПУНКТ:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding PassportWorkerTable.RegistrationPointWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="УЛИЦА:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding PassportWorkerTable.RegistrationStreetWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ДОМ:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding PassportWorkerTable.RegistrationHouseWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="КВАРТИРА:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding PassportWorkerTable.RegistrationApartmentWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Line 
                        X1="0"  X2="315"
                        Y1="0" Y2="0" 
                        Stroke="White"
                        Opacity="0.2"
                        VerticalAlignment="Center"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="КАРТА"
                        Foreground="White"
                        Opacity="0.2"/>
                    <Line 
                        X1="0"  X2="315"
                        Y1="0" Y2="0" 
                        Stroke="White"
                        Opacity="0.2"
                        VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="НОМЕР КАРТЫ:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding CardNumberWorker}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="СРОК КАРТЫ МЕСЯЦ:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding SalaryCardTable.CardValidMonth}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="СРОК КАРТЫ ГОД:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding SalaryCardTable.CardValidYears}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ИМЯ ДЕРЖАТЕЛЯ КАРТЫ:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding SalaryCardTable.CardKeeperName}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="ФАМИЛИЯ ДЕРЖАТЕЛЯ КАРТЫ:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding SalaryCardTable.CardKeeperSurname}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 3 0 0">
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockFalse}"
                        Text="КОД КАРТЫ:"/>
                    <TextBlock 
                        Style="{StaticResource InfoDataBaseTextBlockTrue}"
                        Text="{Binding SalaryCardTable.CardCode}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
